<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/line_vcard_contact_avatar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?attr/selectableItemBackground"
    >

    <com.ctb.vcardtest_project.view.LetterImageView
        android:id="@+id/iv_vcard_contact_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        >

        <TextView
            android:id="@+id/tv_vcard_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/black_2a"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_vcard_item_more"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/black_6a"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>
